{% extends 'FrontBundle:Default:layout.html.twig' %}
{% block head_javascript %}
<script src="{{ asset('assets/js/jquery.min.js') }}" type="text/javascript"></script>
<script src="{{ asset('assets/js/jquery-migrate-1.2.1.min.js') }}" type="text/javascript"></script>
<script src="{{ asset('assets/js/api.jquery.js') }}" type="text/javascript"></script>
<script src="{{ asset('assets/js/device.min.js') }}" type="text/javascript"></script>
<script src="{{ asset('assets/js/jquery.easing.1.3.js') }}" type="text/javascript"></script>
<script src="{{ asset('assets/js/ajaxify-shop.js') }}" type="text/javascript"></script>
<script src="{{ asset('assets/js/hoverIntent.js') }}" type="text/javascript"></script>
<script src="{{ asset('assets/js/superfish.js') }}" type="text/javascript"></script>
<script src="{{ asset('assets/js/sftouchscreen.js') }}" type="text/javascript"></script>
<script src="{{ asset('assets/js/tm-stick-up.js') }}" type="text/javascript"></script>
<script src="{{ asset('assets/js/jquery.ui.totop.js') }}" type="text/javascript"></script>
<script src="{{ asset('assets/js/jquery.formstyler.min.js') }}" type="text/javascript"></script>
<script src="{{ asset('assets/js/wow.min.js') }}" type="text/javascript"></script>
<script src="{{ asset('assets/js/jquery.elevatezoom.js') }}" type="text/javascript"></script>
{% endblock %}
{% block wrapper %}
<div id="wrapper">
   <div id="wrapper2">
      <!-- HEADER -->
      {% block header %}
      <header id="header">
         <div class="container">
            {% block header_top %}
            {{ include('FrontBundle:Default:header_top.html.twig') }}
            {% endblock %}
            {% block header_main %}
            {{ include('FrontBundle:Default:header_main.html.twig') }}
            {% endblock %}
         </div>
      </header>
      {% endblock %}
      <!-- MEGAMENU -->
      {% block megamenu %}
      {{ include('FrontBundle:Default:megamenu.html.twig') }}
      {% endblock %}
      <!-- nivoslider -->
      {% block nivoslider %}{% endblock %}
      <!-- showcase -->
      {% block showcase %}{% endblock %}
      <!-- MAIN CONTENT -->
      {% block main %}
      <div id="main" role="main">
         <div class="container">
            <ul class="breadcrumb">
               <li><a href="{{ url('front_homepage') }}" class="homepage-link" title="{{ 'back_to.the_frontpage'|trans }}">{{ 'homepage.label'|trans }}</a></li>
               <li><span class="page-title">{{ 'contact_us.label'|trans }}</span></li>
            </ul>
            <div class="row sidebar_left ">
               <div class="column_center">
                  <div id="main_content" class="col-sm-9">
                     <div class="contact-scope">
                        <h1 class="page_heading">{{ 'contact_us.label'|trans }}</h1>
                        <form method="post" action="/contact#contact_form" id="contact_form" class="contact-form" accept-charset="UTF-8">
                           <input type="hidden" value="contact" name="form_type"><input type="hidden" name="utf8" value="âœ“">
                           <div id="contactFormWrapper">
                              <div class="row">
                                 <div class="col-sm-4 form-group">
                                    <label class="sr-only">{{ 'your_name.label'|trans }}:</label>
                                    <input type="text" class="form-control hint" id="contactFormName" name="contact[name]" placeholder="{{ 'your_name.label'|trans }}...">
                                 </div>
                                 <div class="col-sm-4 form-group">
                                    <label class="sr-only">{{ 'your_email.label'|trans }}:</label>
                                    <input type="email" class="form-control hint" id="contactFormEmail" name="contact[email]" placeholder="{{ 'your_email.label'|trans }}...">
                                 </div>
                                 <div class="col-sm-4 form-group">
                                    <label class="sr-only">{{ 'your_phone_number.label'|trans }}:</label>
                                    <input type="telephone" class="form-control hint" id="contactFormTelephone" name="contact[phone]" placeholder="{{ 'your_phone_number.label'|trans }}...">
                                 </div>
                              </div>
                              <div class="row">
                                 <div class="col-sm-12 form-group">
                                    <label class="sr-only">{{ 'your_message.label'|trans }}:</label>
                                    <textarea class="form-control hint" rows="5" cols="75" id="contactFormMessage" name="contact[body]" placeholder="{{ 'your_message.label'|trans }}..."></textarea>
                                 </div>
                              </div>
                              <div class="btn-toolbar form-group">
                                 <input type="submit" id="contactFormSubmit" value="Send" class="btn btn-primary">
                                 <input type="reset" value="Clear" class="btn btn-info">
                              </div>
                           </div>
                           <!-- contactFormWrapper -->
                        </form>
                     </div>
                  </div>
               </div>
               <div class="column_left column col-sm-3">
                  <!-- Left menu -->
                  {{ include('FrontBundle:Default:left_menu.html.twig') }}
                  <!-- END Left menu -->
                  <!-- Best sellers -->
                  {{ include('FrontBundle:Product:best_sellers.html.twig') }}
                  <!-- END Best sellers -->
               </div>
            </div>
         </div>
      </div>
      {% endblock %}
      <!-- FOOTER -->
      {% block footer %}
      {{ include('FrontBundle:Default:footer.html.twig') }}
      {% endblock %}      
   </div>
   <!-- / #wrapper2 -->
</div>
{% endblock %}