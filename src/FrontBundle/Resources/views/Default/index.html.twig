<h2 class="page_heading">Featured products</h2>
<p class="heading_text"></p>
<div class="product-listing__index">
<div class="product_listing_main">
   <div class="row">
   {% if products is defined and products %}
   {% for product in products %}
      <div class="wow col-sm-4 
         product product__{{ product.id }} animated">
         <div class="prod_inside clearfix">
            <div class="product_img">
               <a class="img_change" href="{{ url('front_homepage') ~ product.slug }}">
               <span class="ins">
               <img src="{{ product.mainImg }}" alt="{{ product.name }}">
               <img class="img__2" src="{{ asset('assets/images/asiatic_lilies_2_medium.png') }}" alt="{{ product.name }}">
               </span>
               {% if product.specPrice is defined and product.specPrice %}
                   <span class="product_badge sale">{{ 'sale'|trans }}</span>
               {% endif %}
               {% if product.isNew is defined and product.isNew %}
                   <span class="product_badge new">{{ 'new'|trans }}</span>
               {% endif %}
               </a>
            </div>
            <div class="product_info">
               <div class="product_price">
                  {% if product.specPrice is defined and product.specPrice %}
                     <span class="money" data-currency-usd="{{ product.specPrice }}">{{ product.specPrice }}</span>
                     <span class="money compare-at-price" data-currency-usd="{{ product.price }}">{{ product.price }}</span>
                  {% else %}
                     <span class="money" data-currency-usd="{{ product.price }}">{{ product.price }}</span>
                  {% endif %}
               </div>
               <div class="product_name">
                  <a href="{{ url('front_homepage') ~ product.slug }}">{{ product.name }}</a>
               </div>
               <div class="product_desc">{{ product.shortdesc }} ...</div>
               <div class="product_links">
                  <form method="post" action="#cart/add">
                     <input type="hidden" name="id" value="{{ product.id }}">
                     <button class="btn btn-cart" type="submit"><i class="fa fa-shopping-cart"></i></button>
                  </form>
                  <a class="btn" href="{{ url('front_homepage') ~ product.slug }}"><i class="fa fa-info-circle"></i></a>
               </div>
            </div>
         </div>
      </div>
      {% endfor %}
